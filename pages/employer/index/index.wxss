}
/*使屏幕变暗 */
.commodity_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 1;
    color: #fff;
}
/*对话框 */
.commodity_attr_box {
    height: 520rpx;
    position: fixed;
    overflow: hidden;
    bottom: 0;
    left: 0;
    z-index: 2;
    background: #fff;
    padding: 30rpx;
    font-size: 32rpx;
    color: #2A383E;
}
.box-tit {
    text-align: center;
    position: relative;
}
.icon-close {
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    top:0;
    left:0;
}
.priceList {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 60rpx;
    font-size: 28rpx;
}
.des {
    color: #64818D;
    font-size: 32rpx;
}
.pri {
    font-size: 32rpx;
    color: #2A383E;
}
.pri_s {
