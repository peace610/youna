.container {
    padding: 60rpx 30rpx 0;
}
.bg{
    width: 100%;
    height: 100%;
    position: absolute;
    top:0;
    left:0;
    z-index: -1;
}
.top {
    display: flex;
    flex-direction: column;
    font-size: 24rpx;
    color: #fff;
}
.state {
    display: flex;
    justify-content: space-between;
    font-size: 52rpx;
    margin-bottom: 18rpx;
}
.time {
    font-size: 32rpx;
}
.sub-tit {
    opacity: 0.7;
}
.oper {
    margin-top: 58rpx;
}
.btn {
    background: #fff;
    border-radius: 8rpx;
    font-size: 32rpx;
    color: #1ABFC0;
    padding: 14rpx 28rpx;
    margin-right: 20rpx;
    display: inline-block;
}
.btn-s {
    background: none;
    opacity: 0.7;
    border: 1px solid rgba(255,255,255,0.5);
    color: #fff;
}
.tip {
    font-size: 24rpx;
    color: #FAA212;
    margin-left: 12rpx;
}
.info {
    background: #fff;
    border-radius: 8rpx 8rpx 0 0;
}
.icon-get {
    width: 48rpx;
    height: 48rpx;
    margin-right: 30rpx;
}