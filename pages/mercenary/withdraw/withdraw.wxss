page {
    background: #F6F7F7;
}
.bg{
    width: 100%;
    height: 496rpx;
    position: absolute;
    bottom:0;
    left:0;
    z-index: -1;
}
.infoArea {
    height: 136rpx;
    margin: 20rpx 0;
    padding-left: 30rpx;
    display: flex;
    align-items: center;
    background:#fff;
}
.portrait {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}
.info {
    display: flex;
    flex-direction: column;
    font-size: 32rpx;
    color: #2A383E;
    margin-left: 16rpx;
}
.name {
    font-size: 24rpx;
    color: #64818D;
}
.desArea {
    padding-left: 30rpx;
    background:#fff;
    font-size: 28rpx;
    color: #64818D;
}
.priceArea {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-right: 30rpx;
    font-size: 40rpx;
    color: #2A383E;
}
.input-info {
    flex-grow: 1;
    font-size: 48rpx;
}
.all {
    font-size: 32rpx;
    color: #64818D;
}
.priceAll {
    font-size: 28rpx;
    color: #2A383E;
    border-top: 2rpx solid #DAE5EE;
}
.submitButton {
    width: 690rpx;
    height: 94rpx;
    margin: 60rpx auto 0;
    line-height: 94rpx;
    background: #1ABFC0;
    font-size: 32rpx;
    color: #fff;
    border-radius: 8rpx;
}
.button-disabled{
    background: #DAE5EE;
}