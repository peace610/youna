@import '../../../common.wxss'

page {
    background: #F6F7F7;
}
.container {
    background: #fff;
}
.topTip {
    display: flex;
    align-items: center;
    height: 80rpx;
    font-size: 28rpx;
    color: #2A383E;
    padding: 0 30rpx;
}
.icon-material {
    width: 36rpx;
    height: 36rpx;
    margin-right: 20rpx;
}
.list .li:last-child {
    border-bottom: 2rpx solid #DAE5EE;
}
.label-s {
    margin-right: 48rpx;
}
.label-code {
    width: 160rpx;
    margin-right: 0;
    color: #AABEC6;
}
.address {
    width: 500rpx;
}
.input-info {
    position: relative;
}
.surname {
    width: 170rpx;
}
.sign {
    width: 2rpx;
    height: 34rpx;
    background: #64818D;
    margin-right: 40rpx;
}
.icon-area {
    width: 28rpx;
    height: 20rpx;
    position: absolute;
    right: 0;
    top: 10rpx;
}
.type {
    display: flex;
    align-items: center;
}
.sex {
    margin: 0 40rpx 0 20rpx;
}
.setDefault {
    display: flex;
    align-items: center;
    font-size: 32rpx;
    color: #64818D;
    margin-top: 40rpx;
    padding-left: 30rpx;
}
.icon-radio {
    width: 34rpx;
    height: 34rpx;
    margin-right: 40rpx;
}
.footerButton {
    position: relative;
    margin-top: 60rpx;
}